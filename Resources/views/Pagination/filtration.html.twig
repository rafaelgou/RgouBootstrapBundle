<form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

    <select class="form-control input-lg" name="{{ filterFieldName }}">
        {% for field, label in fields %}
            <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>

    <input class="form-control input-lg" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />

    <button class="btn btn-default">{{ options.button }}</button>

</form>